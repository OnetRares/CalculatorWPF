<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Row0Button">#E6F5E1</SolidColorBrush>
    <SolidColorBrush x:Key="Row1Button">#CBEAC3</SolidColorBrush>
    <SolidColorBrush x:Key="Row2Button">#AFDFA6</SolidColorBrush>
    <SolidColorBrush x:Key="Row3Button">#94D487</SolidColorBrush>
    <SolidColorBrush x:Key="Row4Button">#78C869</SolidColorBrush>
    <SolidColorBrush x:Key="Row5Button">#5CBC4C</SolidColorBrush>
    <SolidColorBrush x:Key="Row6Button">#40B02F</SolidColorBrush>

    <LinearGradientBrush  x:Key="AppBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#E6F5E1"/>
        <GradientStop Offset="1.0" Color="#AFDFA6"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ButtonBackground" Color="#5CBC4C"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>

</ResourceDictionary>
