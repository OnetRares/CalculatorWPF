<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key= "Row0Button" >#E1F0F5</SolidColorBrush>
    <SolidColorBrush x:Key= "Row1Button" >#C3DAEA</SolidColorBrush>
    <SolidColorBrush x:Key= "Row2Button" >#A6C8DF</SolidColorBrush>
    <SolidColorBrush x:Key= "Row3Button" >#87B4D4</SolidColorBrush>
    <SolidColorBrush x:Key= "Row4Button" >#69A2C8</SolidColorBrush>
    <SolidColorBrush x:Key= "Row5Button" >#4C90BC</SolidColorBrush>
    <SolidColorBrush x:Key= "Row6Button" >#2F7CB0</SolidColorBrush>

    <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#E1F0F5"/>
        <GradientStop Offset="1.0" Color="#A6C8DF"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ButtonBackground" Color="#3C5B75"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>

</ResourceDictionary> 